{
	"manifest_version": 2,
	"default_locale": "en",
	"name": "__MSG_extension_name__",
	"description": "__MSG_extension_description__",
	"short_name": "ToDoListPro",
	"version": "0.1.0",
	"applications": {
		"gecko": {
	    	"id": "addon@kravi.online"
		}
	},
	"icons": {
		"19" : "img/icon-19.png",
		"38" : "img/icon-38.png",
		"128": "img/icon-128.png"
	},
	"browser_action": {
		"browser_style": false,
		"default_icon": {
			"19" : "img/icon-19.png",
			"38" : "img/icon-38.png"
		},
		"default_popup": "popup.html",
		"default_title": "ToDoListPro"
	},
	"content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/background.js"]
    }
  ],
	"permissions": [
		"storage", "tabs","*://*/*","activeTab","clipboardWrite"
	]
}
